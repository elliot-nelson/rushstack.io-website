# Don't allow people to merge changes to these generated files, because the result
# may be invalid.
pnpm-lock.yaml               merge=binary
shrinkwrap.yaml              merge=binary
npm-shrinkwrap.json          merge=binary
yarn.lock                    merge=binary

# Auto detect text files and perform LF normalization, by default checkout files with LF line endings (even on Windows)
*          text=auto eol=lf

# Text files where line endings should be preserved
*.patch    -text

*.json                       linguist-language=JSON-with-Comments

# Typescript/Javascript
*.ts              text
*.tsx             text
*.d.ts            text
*.js              text
*.jsx             text
*.map             text -diff

# Web
*.htm             text diff=html
*.html            text diff=html
*.xhtml           text diff=html
*.css             text diff=css
*.scss            text diff=css
*.less            text
*.sass            text

# Graphics and Fonts
*.svg      text
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.tif      binary
*.tiff     binary
*.ico      binary
*.eps      binary

# Serialisation/Config
*.xml      text diff=html
*.toml     text
*.yaml     text
*.yml      text

# Documents
*.rtf      diff=astextplain
*.RTF      diff=astextplain
*.md       text diff=markdown
*.mustache text
*.csv      text
*.tsv      text
*.txt      text
*.sql      text

# Docker
Dockerfile        text

# Scripts
# These are explicitly unix files and should use lf
*.bash     text eol=lf
*.sh       text eol=lf
# These are explicitly windows files and should use crlf
*.bat      text eol=crlf
*.cmd      text eol=crlf
*.ps1      text eol=crlf

# NPM
*.npmignore      text
*.npmrc          text

# Prettier
*.prettierignore  text

# VSCode
.vscode/*.json    linguist-language=JSON-with-Comments

# Archives
*.7z       binary
*.gz       binary
*.tar      binary
*.tgz      binary
*.zip      binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore     export-ignore
.gitkeep       export-ignore

